{
  "name": "js-with-typecheck",
  "version": "1.0.0",
  "description": "This repo shows how to leverage on Typescript tools to provide (some) type checking on Javascript projects, without neither changing a legacy codebase nor it's existing build system.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "mocha **/*.spec.js",
    "typecheck": "tsc --allowJs --strict --noemit --checkJs --lib ES6 --strict false **/*.js ",
    "build": "echo 'nothing to do'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gerardolima/js-with-typecheck.git"
  },
  "keywords": [
    "javascript",
    "typecheck",
    "type",
    "types",
    "jsdoc"
  ],
  "author": "Gerardo Lima <gerardo.lima@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/gerardolima/js-with-typecheck/issues"
  },
  "homepage": "https://github.com/gerardolima/js-with-typecheck#readme",
  "devDependencies": {
    "typescript": "^4.0.5"
  },
  "dependencies": {
    "@types/chai": "^4.3.13",
    "@types/mocha": "^10.0.6",
    "chai": "^5.1.0",
    "mocha": "^10.3.0"
  }
}
